<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <BiomeDef>
    <defName>RG-VIS_VulcanicIceSheet</defName>
    <label>vulcanic ice sheet</label>
    <description>Undergound streams of lava mealt the ice allowing for random patches of vegetation. Where the lava reaches the surface, warm, glowing pools "lakes". Hot springs can also be found here.</description>
    <workerClass>RGW_VolcanicIceSheet.RGW_VolcanicIceSheet_BiomeWorker</workerClass>
    <allowRoads>false</allowRoads>
    <allowRivers>false</allowRivers>
    <animalDensity>0.2</animalDensity>
    <plantDensity>0.5</plantDensity>
    <hasVirtualPlants>true</hasVirtualPlants>
    <settlementSelectionWeight>0.15</settlementSelectionWeight>
    <movementDifficulty>1.5</movementDifficulty>
    <texture>World/Biomes/VolcanicIceSheet</texture>
    <forageability>0.2</forageability>
    <isExtremeBiome>true</isExtremeBiome>
    <soundsAmbient>
      <li>Ambient_Wind_Desolate</li>
    </soundsAmbient>
    <diseaseMtbDays>90</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>80</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalFlu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalPlague</diseaseInc>
        <commonality>80</commonality>
      </li>
    </diseases>
