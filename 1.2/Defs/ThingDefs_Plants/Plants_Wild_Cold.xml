<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BushBase">
    <defName>RG-VIC_Plant_ArcticFern</defName>
    <label>fern</label>
    <description>A short shrub with long, fine leaves. Grows in volcanic areas.</description>
    <graphicData>
      <texPath>Things/Plant/ArcticFern</texPath>
      <drawSize>1.15</drawSize>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
      </shadowData>
    </graphicData>
    <uiIconScale>0.85</uiIconScale>
    <plant>
      <growDays>3</growDays>
      <leaflessGraphicPath>Things/Plant/ArcticFern_Leafless</leaflessGraphicPath>
      <harvestWork>60</harvestWork>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>80</wildClusterWeight>
    </plant>
  </ThingDef>
  <ThingDef ParentName="PlantBase">
    <defName>RG-VIC_Plant_ArcticMoss</defName>
    <label>moss</label>
    <description>Wild moss with leafs that grows in clumps in areas of cold temperatures. Moss takes a long time to grow, but is very frost-resistant.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Flammability>0.6</Flammability>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/ArcticMoss</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.2</fertilitySensitivity>
      <growDays>15</growDays>
      <leaflessGraphicPath>Things/Plant/ArcticMoss_Leafless</leaflessGraphicPath>
      <harvestWork>75</harvestWork>
      <maxMeshCount>4</maxMeshCount>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>8</wildClusterWeight>
      <visualSizeRange>0.9~1.5</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>
  <ThingDef ParentName="PlantBase">
    <defName>RG-VIC_Plant_ArcticFlower</defName>
    <label>arctic flower</label>
    <description>A tiny ball-shaped flower which grows in large clusters.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>4</Beauty>
      <Nutrition>0.18</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/ArcticFlower</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.0</fertilitySensitivity>
      <growDays>2.5</growDays>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>25</maxMeshCount>
      <visualSizeRange>0.3~0.4</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>8</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>
  <ThingDef ParentName="TreeBase">
    <defName>RG-VIC_Plant_ArcticTreePine</defName>
    <label>pine tree</label>
    <description>A large conifer covered with prickly pine cones. It grows in a distinctive conical shape.</description>
    <graphicData>
      <texPath>Things/Plant/ArcticPine</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.15, 0.3, 0.15)</volume>
        <offset>(0,0,-0.38)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
      <Nutrition>1.25</Nutrition>
    </statBases>
    <ingestible />
    <plant>
      <growDays>20</growDays>
      <visualSizeRange>1.1~2.5</visualSizeRange>
      <harvestWork>800</harvestWork>
      <harvestYield>27</harvestYield>
    </plant>
  </ThingDef>
</Defs>
